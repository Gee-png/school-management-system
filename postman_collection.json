          }
        },
        {
          "name": "Update Student",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "token",
                "value": "{{shortToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"John Updated\", \"email\": \"john.updated@school.edu\"}"
