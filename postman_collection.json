        {
          "name": "List Classrooms",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "token",
                "value": "{{shortToken}}"
              }
            ],
            "url": "{{base_url}}/api/classroom/v1_listClassrooms?schoolId={{schoolId}}"
          }
        },
        {
          "name": "Update Classroom",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "token",
                "value": "{{shortToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Grade 10-A Advanced\", \"capacity\": 40, \"resources\": [\"projector\", \"whiteboard\", \"computers\"]}"
            },
            "url": "{{base_url}}/api/classroom/v1_updateClassroom/{{classroomId}}"
          }
        },
        {
          "name": "Delete Classroom",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "token",
                "value": "{{shortToken}}"
              }
            ],
            "url": "{{base_url}}/api/classroom/v1_deleteClassroom/{{classroomId}}"
          }
        }
      ]
    },
