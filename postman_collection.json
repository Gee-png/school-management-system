          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "token",
                "value": "{{shortToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"classroomId\": \"{{classroomId}}\"}"
            },
            "url": "{{base_url}}/api/student/v1_transferStudent/{{studentId}}"
          }
        }
      ]
    },
